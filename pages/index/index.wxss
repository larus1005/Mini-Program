.shixiquan {
  padding-bottom: 200rpx;
}
.searchBox {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10rpx;
  background: linear-gradient(#2f88e5, #4eb7f3);
}
.searchBox .chooseCity {
  height: 78rpx;
  flex: 2;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  vertical-align: middle;
  line-height: 78rpx;
  overflow: hidden;
}
.searchBox text {
  color: #fff;
  font-size: 28rpx;
}
.searchBox searchInput {
  flex: 8;
  background-color: #fff;
  border-radius: 38rpx;
  height: 78rpx;
  margin: 10rpx;
}
.searchBox .cancel {
  flex: 1;
  color: #fff;
}
.searchBox .cancel image {
  width: 50rpx;
  height: 50rpx;
}
.swiper {
  transform: translateY(0);
  border-radius: 32rpx;
  overflow: hidden;
}
.swiper swiper {
  width: 680rpx;
  height: 236rpx;
  transform: translateY(0);
  margin: 44rpx auto 34rpx;
  border-radius: 32rpx;
  overflow: hidden;
}
.swiper swiper swiper-item {
  border-radius: 32rpx;
  overflow: hidden;
}
.swiper swiper swiper-item image {
  width: 100%;
}
tabs .job {
  border-bottom: 4rpx solid rgba(92, 90, 88, 0.1);
  padding-left: 50rpx;
  padding-right: 50rpx;
}
tabs .job .jobTitle {
  font-size: 34rpx;
  margin-bottom: 10rpx;
}
tabs .job .jobDetail {
  margin-bottom: 20rpx;
  font-size: 24rpx;
  color: #5c5a58;
}
tabs .job .jobTags {
  display: flex;
  margin-bottom: 24rpx;
}
tabs .job .jobTags view {
  width: 116rpx;
  height: 44rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  color: #fff;
  line-height: 44rpx;
  text-align: center;
  background-color: #a9c5e3;
  margin-right: 28rpx;
}
tabs .job .silkbag {
  display: flex;
  align-items: center;
  height: 52rpx;
}
tabs .job .silkbag .portrait image {
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
}
tabs .job .silkbag .bagContent {
  margin-left: 20rpx;
  color: #5c5a58;
  font-size: 24rpx;
  height: 34rpx;
  line-height: 34rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
