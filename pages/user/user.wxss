.user .userInfo {
  display: flex;
  align-items: center;
  height: 120rpx;
  background-color: #fff;
  width: calc( 100vw - 40rpx );
  margin: 20rpx auto;
}
.user .userInfo image {
  width: 90rpx;
  height: 90rpx;
}
